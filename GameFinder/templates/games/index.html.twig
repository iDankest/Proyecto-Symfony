{% extends 'base.html.twig' %}

{% block title %}Games searcher
{% endblock %}

{% block body %}

	{# Contenedor #}

	<div class="inline-block-container">

		{{ form_start(form) }}
		<div class="item">
		{{ form_widget(form) }}
		</div>
		<div class="item">
			<button class="search-btn item text-white  border border-gray-400 text-xl" type="submit">Buscar</button>
		</div>
		{{ form_end(form) }}

	</div>


	<div class="flex flex-col items-center justify-center">

		<div class="flex flex-wrap gap-6 justify-center">
			{% for game in games %}
				<div class="w-[530px] h-[280px] text-white border border-gray-400 overflow-hidden shadow-lg rounded-md hover:scale-105 transition-all gameCard">
					<a href="{{ path('app_games_show', {'id': game.id}) }}">
						<div class="w-full h-4/5 mb-4" style="background-image: url('{{ game.photo }}'); background-size: cover;"></div>
						<p class="text-2xl text-center">{{ game.title }}</p>
					</a>
				</div>
			{% endfor %}
		</div>
	</div>

{% endblock %}
