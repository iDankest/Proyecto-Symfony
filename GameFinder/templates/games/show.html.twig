	<div class="text-4xl">
		<b>Release date:
		</b>
	</div>

	<div class="text-4xl ml-auto">
		<b>Metacritic Assessment:
		</b>
	</div>

</div>

<div class="w-[1386px] mx-auto flex">

	<div class="text-4xl font-thin">
		<b>{{ game.releaseDate ? game.releaseDate|date('Y-m-d') : '' }}</b>
	</div>

	<div class="ml-auto text-4xl font-thin">
		<b>{% if game.assessment == 0 %}
			Not rated
			{% else %}
			{{ game.assessment }}
			{% endif %}
		</b>
	</div>

</div>


